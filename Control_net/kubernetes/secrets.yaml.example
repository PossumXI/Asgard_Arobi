# ASGARD Kubernetes Secrets Template
# ===========================================================================
# SECURITY WARNING:
#   - This is a TEMPLATE file - do not use directly in production
#   - Copy to secrets.yaml and replace all placeholder values
#   - NEVER commit secrets.yaml to version control
#   - For production, use a secrets manager like:
#     * Kubernetes External Secrets Operator
#     * HashiCorp Vault
#     * AWS Secrets Manager
#     * Azure Key Vault
#     * Sealed Secrets
#
# To apply (after filling in values):
#   kubectl apply -f secrets.yaml
#
# To generate strong passwords:
#   openssl rand -base64 32
# ===========================================================================

apiVersion: v1
kind: Secret
metadata:
  name: asgard-secrets
  namespace: asgard
  labels:
    app: asgard
    component: secrets
type: Opaque
stringData:
  # Database credentials - REPLACE WITH ACTUAL VALUES
  postgres-host: postgres.asgard.svc.cluster.local
  postgres-user: postgres
  postgres-password: "REPLACE_WITH_STRONG_PASSWORD"
  
  mongo-host: mongodb.asgard.svc.cluster.local
  mongo-user: admin
  mongo-password: "REPLACE_WITH_STRONG_PASSWORD"
  
  redis-password: "REPLACE_WITH_STRONG_PASSWORD"
  
  # JWT Secret - minimum 32 characters, use: openssl rand -base64 48
  asgard-jwt-secret: "REPLACE_WITH_STRONG_SECRET_MIN_32_CHARS"
  
  # Stripe API keys - get from https://dashboard.stripe.com/apikeys
  stripe-secret-key: ""
  stripe-webhook-secret: ""
  
  # WebAuthn configuration - update for production domain
  webauthn-rp-id: "aura-genesis.org"
  webauthn-rp-origin: "https://aura-genesis.org"
  webauthn-rp-name: "ASGARD Government Portal"
  
  # Email configuration (optional)
  smtp-host: ""
  smtp-user: ""
  smtp-password: ""
