{
  "title": "ASGARD Overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests (5m rate)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(asgard_http_requests_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "WebSocket Connections",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "asgard_websocket_connections_active",
          "legendFormat": "active"
        }
      ]
    },
    {
      "type": "stat",
      "title": "NATS Connection Status",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "asgard_nats_connection_status"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "timeseries",
      "title": "Security Threats Detected",
      "gridPos": { "x": 6, "y": 8, "w": 18, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(asgard_giru_threats_detected_total[5m])) by (severity)",
          "legendFormat": "{{severity}}"
        }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
